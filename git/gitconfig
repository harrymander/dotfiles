[init]
	defaultBranch = main
[alias]
	br = branch
	st = status
	h = help
	sm = submodule
	rl = reflog

	# Commit operations
	amend = commit --amend
	ci = commit
	cp = cherry-pick

	# Checkout/switch operations
	co = checkout
	sw = switch
	col = switch @{-1}

	# Log operations
	summary = log --pretty=oneline
	l = summary
	lplain = log --oneline --no-decorate
	last = log -1 HEAD
	tree = log --graph --oneline --all --decorate
	diffstat = diff --stat

	# Diffing operations
	d = diff
	diffname = diff --name-status
	diffword = diff --word-diff
	wdiff = diff --word-diff
	check = diff --check

	# Config
	cfg = config --global
	cfl = config --local
	cfs = config --system

	# Show author of most recent commit on each branch
	branchauthors = "! \
		for branch in `git branch -r | grep -v HEAD`; do \
			echo `git show --format=\"%ai %ar by %an\" $branch | head -n 1` \t$branch; \
		done | sort -r"

	# Push to all remotes
	pushall = !git remote | xargs -I{} git push {}

	sed = !git grep --null --name-only -I . | xargs -0 sed --in-place -e

[core]
	editor = vim
[diff]
	tool = vimdiff
[color]
	ui = auto
